doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Pasadena Carpool Preferences
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.3/angular-route.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js')

    body
    div
      div
        nav.navbar.navbar-inverse(role='navigation', style='padding-left:130px;')
          ul.nav.navbar-nav
            li
              a(href='/') Home
            li
              a(href='/schedule') Schedule
            li
              a(href='/czar') Czar
            li
              a(href='/newUser') Add New User
            li.active
              a(href='/preferences') Preferences
            li
              a(href='/logout') Logout
    br
    .container.theme-showcase(role='main')
      h1 Edit Preferences
      form#editForm(class="form-horizontal", role="form", method='POST', action='/prefData')

        .form-group
          label(class="col-lg-3 control-label") Name:
          div(class="col-lg-8")
            input#name.form-control(type="text" name='name', value=name)
        
        .form-group
          label(class="col-lg-3 control-label") Phone Number:
          div(class="col-lg-8")
            input#phoneNumber.form-control(type="text" name='phoneNumber', value=phoneNumber)
        
        .form-group
          label(class="col-lg-3 control-label" for='numPassengers') Number of Passengers:
          div(class="col-lg-8")
            input#phoneNumber.form-control(type="text", name='numPassengers', value=numPassengers)

        button.btn.btn-default(type='submit') Save Changes


        